{
  "name": "setup-nuget-exe",
  "version": "1.0.2",
  "private": true,
  "description": "Download and install NuGet.exe for use in GitHub Actions.",
  "main": "lib/main.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc",
    "format": "prettier --write src/**/*.ts",
    "format-check": "prettier --check src/**/*.ts",
    "test": "jest --coverage",
    "update-deps": "npm prune --production && git add -f node_modules/* && git commit -m \"deps: update node modules\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuget/setup-nuget-exe.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Microsoft",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@actions/io": "^1.0.2",
    "@actions/tool-cache": "^1.6.0",
    "semver": "^7.3.2",
    "typed-rest-client": "^1.8.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "@types/semver": "^7.3.4",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "mode-to-permissions": "0.0.2",
    "nock": "^13.0.5",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  },
  "husky": {
    "skipCI": true,
    "hooks": {
      "pre-commit": "npm run build && npm run format && git add lib src"
    }
  }
}
